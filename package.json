{
  "name": "excalidraw",
  "productName": "Excalidraw",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "dist": "electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "electron": "^32.1.2",
    "electron-builder": "^25.0.5"
  },
  "build": {
    "appId": "app.excalidraw",
    "productName": "Excalidraw",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "index.js",
      "package.json"
    ],
    "mac": {
      "target": "dmg",
      "category": "public.app-category.graphics-design",
      "icon": "build/icon.icns",
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "sign": false
    },
    "win": {
      "target": [
        "portable",
        "msi"
      ],
      "icon": "build/icon2.ico"
    },
    "msi": {
      "oneClick": false,
      "perMachine": false
    }
  }
}